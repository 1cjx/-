<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jx.mapper.ChatRandomQuestionMapper">
    <select id="getRandomQuestion" resultType="com.jx.domain.entity.ChatRandomQuestion">
        SELECT *
        FROM sys_chat_random_question
        ORDER BY RAND()
        LIMIT 4;
    </select>
</mapper>