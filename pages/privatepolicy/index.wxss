.body {
  font-family: 'Arial', sans-serif;
  background-color: #f2f2f2;
  padding: 20px;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}
.body .title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}
.body .section .content {
  font-size: 14px;
  line-height: 1.6;
  color: #333;
  margin-bottom: 10px;
  text-indent: 2em;
}
.body .section .list {
  margin: auto;
  padding: 0;
  list-style: none;
  width: 80%;
}
.body .section .list .list-item {
  font-size: 14px;
  line-height: 1.6;
  margin-bottom: 10px;
}
.body .section .strong {
  font-weight: bold;
}
.body .date {
  font-size: 14px;
  color: #666;
  margin-bottom: 10px;
}
.body .date .date-content {
  font-size: 14px;
  font-weight: bold;
}
