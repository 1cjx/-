.body {
  font-family: 'Arial', sans-serif;
  background-color: #f2f2f2;
  padding: 20px;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}
.body .title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}
.body .content {
  font-size: 14px;
  line-height: 1.6;
  color: #333;
  margin-bottom: 10px;
}
