page {
  background-color: #e7e5e5;
}
.user_register {
  margin: auto;
  margin-top: 10vh;
  padding: 30rpx;
  background-color: white;
  width: 80%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.user_register .title {
  width: 100%;
  display: flex;
  justify-content: center;
  font-size: 44rpx;
  margin-bottom: 2vh;
}
.user_register .user_info {
  font-size: 33rpx;
  width: 85%;
  display: flex;
  align-items: center;
  height: 8vh;
}
.user_register .user_info text {
  min-width: 20%;
}
.user_register .user_info input {
  width: 69%;
  border-bottom: grey solid 1px;
}
.user_register .user_info image {
  width: 45rpx;
  height: 45rpx;
}
.user_register .sex {
  font-size: 33rpx;
  width: 85%;
  display: flex;
  align-items: center;
  height: 8vh;
}
.user_register .sex text {
  min-width: 20%;
}
.user_register .sex radio {
  margin-right: 20rpx;
}
.user_register .sex .wx-radio-input {
  width: 25rpx;
  height: 25rpx;
  border-radius: 50%;
  border: 2rpx solid #0e0d0d;
  background: transparent;
}
.user_register .sex .wx-radio-input.wx-radio-input-checked {
  width: 25rpx;
  height: 25rpx;
  border: 2rpx solid #000000;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white !important;
}
.user_register .sex .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%;
  width: 15rpx;
  height: 15rpx;
  color: transparent;
  background: #4b4b4b;
  transform: translate(-50%, -50%) scale(1);
}
.user_register button {
  margin-top: 30rpx;
}
