.searchBar {
  height: 90rpx;
  padding: 10rpx;
  background-color: var(--themeColor);
}
.searchBar .search {
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: azure;
  border-radius: 215rpx;
  color: #666;
  padding-left: 30rpx;
}
.searchBar .search input {
  width: 70%;
  height: 80%;
  text-align: left;
}
.searchBar .search .searchButton {
  font-size: 25rpx;
  font-weight: lighter;
  letter-spacing: 2px;
  color: white;
  margin-right: 7rpx;
  background-color: #ff772c;
  width: 18%;
  height: 90%;
  border-radius: 215rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: none;
  margin-left: 0rpx;
}
.searchBar .search .cancelButton {
  margin-right: 0;
  border-radius: 30rpx;
  background-color: #ffffff;
  width: 50rpx;
  height: 50rpx;
}
.body .List_guide {
  display: flex;
  align-items: center;
  padding-left: 10rpx;
  border-bottom: grey solid 1px;
  height: 60rpx;
  font-size: 30rpx;
}
.body .List_guide .highlight {
  color: red;
}
.body .Err_Nodata {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}
